from fpdf import FPDF

# –°–æ–∑–¥–∞–µ–º PDF-—Ñ–∞–π–ª —Å –ø–∞–º—è—Ç–∫–æ–π –æ –≥–æ—Ä–º–æ–Ω–∞—Ö
pdf = FPDF()
pdf.add_page()
pdf.set_auto_page_break(auto=True, margin=15)

# –ó–∞–≥–æ–ª–æ–≤–æ–∫
pdf.set_font("Arial", "B", 16)
pdf.cell(0, 10, "–ü–∞–º—è—Ç–∫–∞: –≥–æ—Ä–º–æ–Ω—ã —É –≥–∏–Ω–µ–∫–æ–ª–æ–≥–∞", ln=True, align="C")
pdf.ln(10)

# –û—Å–Ω–æ–≤–Ω–æ–π —Ç–µ–∫—Å—Ç
pdf.set_font("Arial", "", 12)
text = """
üìÖ –§–∞–∑—ã —Ü–∏–∫–ª–∞ –∏ –∞–Ω–∞–ª–∏–∑—ã:

–§–°–ì (2‚Äì5 –¥–µ–Ω—å) ‚Äî 3‚Äì12 –º–ú–ï/–º–ª ‚Üí —Ä–∞–±–æ—Ç–∞ —è–∏—á–Ω–∏–∫–æ–≤, –æ–≤–∞—Ä–∏–∞–ª—å–Ω—ã–π —Ä–µ–∑–µ—Ä–≤
–õ–ì (2‚Äì5 –¥–µ–Ω—å) ‚Äî 2‚Äì12 –º–ú–ï/–º–ª ‚Üí –æ–≤—É–ª—è—Ü–∏—è, –°–ü–ö–Ø
–≠—Å—Ç—Ä–∞–¥–∏–æ–ª (E2) (2‚Äì5 –¥–µ–Ω—å) ‚Äî 50‚Äì200 –ø–º–æ–ª—å/–ª ‚Üí —É—Ä–æ–≤–µ–Ω—å —ç—Å—Ç—Ä–æ–≥–µ–Ω–æ–≤
–ü—Ä–æ–ª–∞–∫—Ç–∏–Ω (2‚Äì5 –¥–µ–Ω—å, —É—Ç—Ä–æ) ‚Äî 70‚Äì500 –º–ú–ï/–ª ‚Üí –æ–≤—É–ª—è—Ü–∏—è, –≤—ã–¥–µ–ª–µ–Ω–∏—è –∏–∑ –≥—Ä—É–¥–∏
–¢–µ—Å—Ç–æ—Å—Ç–µ—Ä–æ–Ω (2‚Äì5 –¥–µ–Ω—å) ‚Äî 0.3‚Äì2.0 –Ω–≥/–º–ª ‚Üí –ª–∏—à–Ω–∏–µ –≤–æ–ª–æ—Å—ã, –∞–∫–Ω–µ
–î–ì–≠–ê-–° (2‚Äì5 –¥–µ–Ω—å) ‚Äî 1‚Äì10 –º–∫–≥/–º–ª ‚Üí –∞–Ω–¥—Ä–æ–≥–µ–Ω—ã –Ω–∞–¥–ø–æ—á–µ—á–Ω–∏–∫–æ–≤
17-–û–ù-–ø—Ä–æ–≥–µ—Å—Ç–µ—Ä–æ–Ω (2‚Äì5 –¥–µ–Ω—å) ‚Äî 0.1‚Äì2.3 –Ω–≥/–º–ª ‚Üí –Ω–∞–¥–ø–æ—á–µ—á–Ω–∏–∫–æ–≤—ã–µ –Ω–∞—Ä—É—à–µ–Ω–∏—è
–ê–ú–ì (–ª—é–±–æ–π –¥–µ–Ω—å) ‚Äî 1‚Äì4 –Ω–≥/–º–ª ‚Üí –∑–∞–ø–∞—Å —è–π—Ü–µ–∫–ª–µ—Ç–æ–∫
–ü—Ä–æ–≥–µ—Å—Ç–µ—Ä–æ–Ω (21‚Äì23 –¥–µ–Ω—å) ‚Äî >10 –Ω–≥/–º–ª ‚Üí –±—ã–ª–∞ –ª–∏ –æ–≤—É–ª—è—Ü–∏—è
–¢–¢–ì (–ª—é–±–æ–π –¥–µ–Ω—å) ‚Äî 0.4‚Äì4.0 –º–ú–ï/–ª ‚Üí —Ä–∞–±–æ—Ç–∞ —â–∏—Ç–æ–≤–∏–¥–∫–∏
–°–≤–æ–±–æ–¥–Ω—ã–π –¢4 (–ª—é–±–æ–π –¥–µ–Ω—å) ‚Äî 10‚Äì22 –ø–º–æ–ª—å/–ª ‚Üí –æ–±–º–µ–Ω –≤–µ—â–µ—Å—Ç–≤
–ò–Ω—Å—É–ª–∏–Ω, –≥–ª—é–∫–æ–∑–∞, –ì–°–ü–ì (–ª—é–±–æ–π –¥–µ–Ω—å, –Ω–∞—Ç–æ—â–∞–∫) ‚Äî –ø–æ –ø–æ–∫–∞–∑–∞–Ω–∏—è–º

üí° –ü–æ–¥–≥–æ—Ç–æ–≤–∫–∞ –∫ –∞–Ω–∞–ª–∏–∑–∞–º:
‚Ä¢ –°–¥–∞–≤–∞—Ç—å —É—Ç—Ä–æ–º, –Ω–∞—Ç–æ—â–∞–∫ (8‚Äì10 —á –±–µ–∑ –µ–¥—ã)
‚Ä¢ –ò–∑–±–µ–≥–∞—Ç—å —Å—Ç—Ä–µ—Å—Å–∞, —Å–ø–æ—Ä—Ç–∞, –∞–ª–∫–æ–≥–æ–ª—è, –∫–æ—Ñ–µ
‚Ä¢ –ù–µ –∫—É—Ä–∏—Ç—å –∑–∞ —á–∞—Å –¥–æ —Å–¥–∞—á–∏
‚Ä¢ –î–ª—è –ø—Ä–æ–ª–∞–∫—Ç–∏–Ω–∞ ‚Äî —Å–ø–æ–∫–æ–π–Ω–æ–µ —É—Ç—Ä–æ –±–µ–∑ –Ω–∞–≥—Ä—É–∑–∫–∏
‚Ä¢ –õ—É—á—à–µ —Å–¥–∞–≤–∞—Ç—å –≤ –æ–¥–Ω–æ–π –ª–∞–±–æ—Ä–∞—Ç–æ—Ä–∏–∏ –¥–ª—è —Å—Ä–∞–≤–Ω–µ–Ω–∏—è
"""
pdf.multi_cell(0, 8, text)

# –°–æ—Ö—Ä–∞–Ω—è–µ–º PDF
filename = "pamyatka_gormony_ginekolog.pdf"
pdf.output(filename)

print(f"–§–∞–π–ª —Å–æ—Ö—Ä–∞–Ω—ë–Ω –∫–∞–∫ {filename}")
